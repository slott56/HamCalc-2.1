10 :REM'WATCH" - Stopwatch - 04 MAR 08
20 IF EX$=""THEN EX$="EXIT"
30 IF PROG$=""THEN GO$=EX$ :ELSE GO$=PROG$
40 COMMON EX$,PROG$
50 :REM'.....menu
60 CLS:KEY OFF
70 COLOR 7,0,0
80 PRINT " STOPWATCH"TAB(57)"by George Murphy VE3ERP ";
90 PRINT STRING$(79,205)
100 SEC=0
110 COLOR 10:PRINT " Press 1 to START or 0 to EXIT":COLOR 7
120 IF SEC=0 THEN 140
130 COLOR 12:PRINT " Press 2 to STOP or 0 to EXIT":COLOR 7
140 Z$=INKEY$:IF Z$=""THEN 140
150 IF Z$="0"THEN CLS:RUN EX$
160 IF Z$="1"THEN 190
170 IF Z$="2"THEN 220
180 GOTO 150
190 :REM'.....start
200 LOCATE 3:PRINT STRING$(79,32):LOCATE 3:PRINT " Start @ ";DATE$;"   "TIME$
210 T1=TIMER:LOCATE 4:GOTO 130
220 :REM'.....stop
230 LOCATE 4:PRINT STRING$(79,32):LOCATE 4:PRINT " Stop @  ";DATE$;"   "TIME$
240 T2=TIMER
250 SEC=T2-T1
260 PRINT
270 PRINT USING " Elapsed time = ####.### seconds";SEC
280 PRINT USING "              = ####.### minutes";SEC/60
290 PRINT USING "              = ####.### hours";SEC/3600
300 PRINT
310 PRINT " Want another?   (y/n)"
320 Z$=INKEY$:IF Z$=""THEN 320
330 IF Z$="n"THEN CLS:RUN EX$
340 IF Z$="y"THEN 50
350 GOTO 330
360 END
